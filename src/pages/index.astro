        justify-content: center;
        gap: var(--space-md);
        opacity: 0;
        visibility: hidden;
        transition: all var(--transition-normal);
      }

      .lightbox.active {
        opacity: 1;
        visibility: visible;
      }

      .lightbox-close {
        position: absolute;
        top: var(--space-lg);
        right: var(--space-lg);
        color: white;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .lightbox img {
        max-width: 90vw;
        max-height: 80vh;
        object-fit: contain;
      }

      .lightbox p {
        color: white;
        font-size: 1rem;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .constellation {
          height: 550px;
