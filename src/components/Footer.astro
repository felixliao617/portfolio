---
interface Props {
  email: string;
  name: string;
}

const { email, name } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <a href={`mailto:${email}`} class="footer-email">{email}</a>
      <p class="footer-copyright">&copy; {currentYear} {name}. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: var(--space-2xl) 0;
    border-top: 1px solid var(--color-border);
    margin-top: var(--space-3xl);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    text-align: center;
  }

  .footer-email {
    font-size: 1rem;
    font-weight: 500;
  }

  .footer-copyright {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
</style>
